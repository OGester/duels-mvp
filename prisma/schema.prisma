generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // or env("DATABASE_URL")
}

model User {
  id              String @id @default(uuid())
  username        String
  email           String @unique
  passwordHash    String  
  //define role after switching to postgres
  //role            Role @default(USER)
}

